<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mydemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/black</item>

        <!-- 主题颜色. -->
        <item name="colorPrimary">@color/main</item>
        <!-- 主题颜色.轻量一般用做背景 -->
        <item name="colorPrimaryVariant">@color/primary</item>

        <item name="android:textColorHighlightInverse">@color/white</item>

        <!-- 设置状态栏 color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- 设置状态栏文字色为深色, true为深色, false为白色 -->
        <item name="android:windowLightStatusBar">true</item>

        <!--窗口背景色-->
        <item name="android:windowBackground">@color/background</item>

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>

        <!--背景色-->
<!--        <item name="lineSpacing">@color/line</item>-->
        <!--底部菜单栏-->
        <!--背景色-->
        <item name="bottomNavigationViewBackgroundColor">@color/white</item>
        <item name="bottomNavigationViewBackgroundColor_ButtonUnselected">@color/buttonBarUnselected</item>
        <item name="bottomNavigationViewBackgroundColor_ButtonSelected">@color/buttonBarSelected</item>


    </style>


    <style name="SplashTheme" parent="Theme.Mydemo">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/light_blue_400</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>


    <style name="Theme.Mydemo.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- 主题颜色. -->
        <item name="colorPrimary">@color/main</item>
        <!-- 主题颜色.轻量一般用做背景 -->
        <item name="colorPrimaryVariant">@color/primary</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlightInverse">@color/white</item>

        <!-- 设置状态栏 color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- 设置状态栏文字色为深色, true为深色, false为白色 -->
        <item name="android:windowLightStatusBar">false</item>

        <!--窗口背景色-->
        <item name="android:windowBackground">@color/gray_transparent</item>

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>

        <!--间隔线-->
        <item name="lineSpacing">@color/line</item>
        <!--底部菜单栏-->
        <!--背景色-->
        <item name="bottomNavigationViewBackgroundColor">@color/black</item>
        <item name="bottomNavigationViewBackgroundColor_ButtonUnselected">
            @color/buttonBarUnselected
        </item>
        <item name="bottomNavigationViewBackgroundColor_ButtonSelected">@color/buttonBarSelected
        </item>
    </style>


    <style name="ontextoff" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#0d09f1</item>
        <item name="android:textSize">8sp</item>

        <!--开启时的颜色-->
        <item name="colorControlActivated">#00e6db</item>
        <!--关闭时的颜色-->
        <item name="colorSwitchThumbNormal">#383434</item>
        <!--关闭时的轨迹颜色-及字体颜色-->
        <item name="android:colorForeground">#FFFFFF</item>
    </style>


    <!-- 圆角图片 -->
    <style name="roundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>